<div class="container mt-2 col-4 offset-4">
  <% if action_name == "new" || action_name == "create" %>
    <h1>Create a new course</h1>
  <% else %>
    <h1>Edit the course</h1>
  <% end %>
  <%= simple_form_for @course do |f| %>
    <%= f.input :title, class: "form-control" %>
    <%= f.input :description, class: "form-control" %>
    <%= f.association :category, label: "Category", class: "form_control" %>
    <%= f.input :schedule_date, class: "form-control" %>
    <%= f.input :duration, class: "form-control", label: "Duration (min)" %>
    <%= f.input :price, class: "form-control", label: "Price ($)" %>
    <% if action_name == "new" || action_name == "create"%>
      <%= f.submit "Add", class: "btn-blue-green" %>
    <% else %>
      <%= f.submit "Edit", class: "btn-blue-green" %>
    <% end %>
  <% end %>

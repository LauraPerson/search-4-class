<%= simple_form_for(@course) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :schedule_date %>
    <%= f.date_field :schedule_date %>
    <%= f.label :duration %>
    <%= f.number_field :duration %>
    <%= f.submit %>
<% end %>